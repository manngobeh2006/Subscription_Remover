<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".ui.fragments.AnalyticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline1"
            android:layout_marginBottom="24dp" />

        <!-- Coming Soon Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SubscriptionRemover.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_analytics_24"
                    android:layout_marginBottom="16dp"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Analytics"
                    android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline2"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detailed spending insights, usage trends, and savings recommendations coming soon!"
                    android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                    android:textColor="@color/on_primary_container"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_notify_when_ready"
                    style="@style/Widget.SubscriptionRemover.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notify Me When Ready" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
