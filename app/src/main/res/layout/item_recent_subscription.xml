<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Category Indicator -->
        <View
            android:id="@+id/category_indicator"
            android:layout_width="4dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/entertainment" />

        <!-- Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            tools:src="@drawable/ic_subscription_placeholder" />

        <!-- Subscription Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subscription_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="2dp"
                tools:text="Netflix" />

            <TextView
                android:id="@+id/tv_usage_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.SubscriptionRemover.Caption"
                android:textColor="@color/success"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Active" />

        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginStart="12dp"
            tools:text="$15.99" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
