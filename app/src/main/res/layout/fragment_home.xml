<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".ui.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning"
                android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline1"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_welcome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back, User!"
                android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                android:textColor="@color/on_surface_variant" />

        </LinearLayout>

        <!-- Trial Banner -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/trial_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary"
            app:cardBackgroundColor="@color/primary_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_star_24"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_trial_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Trial Active"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/tv_trial_days_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 days left"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body2" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upgrade"
                    style="@style/Widget.SubscriptionRemover.Button.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upgrade"
                    android:textColor="@color/primary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_total_spending"
                style="@style/Widget.SubscriptionRemover.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Spending"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body2"
                        android:textColor="@color/on_surface_variant"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_total_spending_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline2"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_active_subscriptions"
                style="@style/Widget.SubscriptionRemover.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Subscriptions"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body2"
                        android:textColor="@color/on_surface_variant"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_active_subscriptions_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline2"
                        android:textColor="@color/secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Upcoming Bills Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_upcoming_bills"
            style="@style/Widget.SubscriptionRemover.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upcoming Bills"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline2" />

                    <TextView
                        android:id="@+id/tv_upcoming_bills_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                        android:textColor="@color/warning"
                        android:background="@drawable/badge_warning"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:minWidth="24dp"
                        android:gravity="center" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_upcoming_bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_upcoming_bill"
                    tools:itemCount="3" />

                <TextView
                    android:id="@+id/empty_state_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No upcoming bills in the next 7 days"
                    android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body2"
                    android:textColor="@color/on_surface_variant"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_see_all_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="See All"
                    android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                    android:textColor="@color/primary"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Smart Recommendations -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/smart_recommendation_card"
            style="@style/Widget.SubscriptionRemover.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/warning"
            app:cardBackgroundColor="@color/warning_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lightbulb_24"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/warning" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Recommendation"
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                        android:textStyle="bold"
                        android:textColor="@color/warning"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_recommendation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have 3 unused subscriptions. Consider canceling to save money."
                        android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body2"
                        android:textColor="@color/on_warning_container" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_recommendations"
                    style="@style/Widget.SubscriptionRemover.Button.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textColor="@color/warning" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Subscriptions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Subscriptions"
                    android:textAppearance="@style/TextAppearance.SubscriptionRemover.Headline2" />

                <TextView
                    android:id="@+id/tv_see_all_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body1"
                    android:textColor="@color/primary"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent_subscriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_recent_subscription"
                tools:itemCount="5" />

            <TextView
                android:id="@+id/empty_state_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No subscriptions yet.\nAdd your first subscription to get started!"
                android:textAppearance="@style/TextAppearance.SubscriptionRemover.Body2"
                android:textColor="@color/on_surface_variant"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_subscription"
        style="@style/Widget.SubscriptionRemover.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Add Subscription"
        app:srcCompat="@drawable/ic_add_24" />

</androidx.core.widget.NestedScrollView>
